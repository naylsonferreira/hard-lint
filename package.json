{
  "name": "hard-lint",
  "version": "0.3.1",
  "description": "Configuração rigorosa de ESLint para projetos TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./eslint.config.mjs": "./eslint.config.mjs"
  },
  "files": [
    "dist",
    "eslint.config.mjs"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "validate-e2e": "node scripts/validate-e2e-selectors.js",
    "validate-jsdoc": "node scripts/validate-no-jsdoc.js",
    "prepare": "npm run build && husky install",
    "release:patch": "npm version patch && npm run build && npm publish",
    "release:minor": "npm version minor && npm run build && npm publish",
    "release:major": "npm version major && npm run build && npm publish"
  },
  "keywords": [
    "eslint",
    "config",
    "typescript",
    "linting",
    "code-quality"
  ],
  "author": "naylsonferreira",
  "license": "MIT",
  "peerDependencies": {
    "eslint": ">=8.56.0",
    "typescript": ">=5.0.0"
  },
  "dependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/naylsonferreira/hard-lint.git"
  },
  "bugs": {
    "url": "https://github.com/naylsonferreira/hard-lint/issues"
  },
  "homepage": "https://github.com/naylsonferreira/hard-lint#readme",
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "eslint"
    ],
    "**/*.{e2e,test}.{ts,tsx,js,jsx}": [
      "node scripts/validate-e2e-selectors.js"
    ]
  }
}